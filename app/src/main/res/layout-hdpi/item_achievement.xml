<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViews7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/verdana_bold"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="Bilang ng pag-ulit:"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_l"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTextViewAchievementsTries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/verdana_bold"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="99"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_l"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_2"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/verdana_bold"
                    android:padding="4dp"
                    android:text="Kategorya:"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_l"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTextViewAchievementsCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/verdana_bold"
                    android:padding="4dp"
                    android:text="99"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_l"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mImageViewAchievementsStar1"
                android:layout_width="@dimen/button_width_m"
                android:layout_height="@dimen/button_height_m"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_starlocked" />

            <ImageView
                android:id="@+id/mImageViewAchievementsStar2"
                android:layout_width="@dimen/button_width_m"
                android:layout_height="@dimen/button_height_m"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_starlocked" />

            <ImageView
                android:id="@+id/mImageViewAchievementsStar3"
                android:layout_width="@dimen/button_width_m"
                android:layout_height="@dimen/button_height_m"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_starlocked" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_2"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/verdana_bold"
                    android:padding="4dp"
                    android:text="Puntos:"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_l"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTextViewAchievementsScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/verdana_bold"
                    android:padding="4dp"
                    android:text="99"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_l"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_2"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/verdana_bold"
                    android:padding="4dp"
                    android:text="Antas:"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_l"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTextViewAchievementsLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/verdana_bold"
                    android:padding="4dp"
                    android:text="99"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_l"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_2"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mTextViewAchievementsStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/verdana_bold"
                    android:padding="4dp"
                    android:text="Titik:"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_l"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTextViewAchievementsLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/verdana_bold"
                    android:padding="4dp"
                    android:text="99"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_l"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>