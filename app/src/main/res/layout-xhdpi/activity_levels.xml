<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    tools:context=".LevelsActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_stars"
        android:fontFamily="@font/verdana_bold"
        android:padding="@dimen/padding_3"
        android:text="ANTAS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mButtonLevel2"
        app:layout_constraintEnd_toEndOf="@+id/mButtonLevel3"
        app:layout_constraintStart_toStartOf="@+id/mButtonLevel1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mButtonLevel1"
        android:layout_width="@dimen/button_width_xxl"
        android:layout_height="@dimen/button_width_xxl"
        android:background="@drawable/bg_stars"
        android:fontFamily="@font/verdana_bold"
        android:text="1"
        android:onClick="SelectedLevel"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mButtonLevel2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mButtonLevel2"
        android:layout_width="@dimen/button_width_xxl"
        android:layout_height="@dimen/button_width_xxl"
        android:background="@drawable/bg_stars"
        android:fontFamily="@font/verdana_bold"
        android:onClick="SelectedLevel"
        android:text="2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mButtonLevel3"
        android:layout_width="@dimen/button_width_xxl"
        android:layout_height="@dimen/button_width_xxl"
        android:background="@drawable/bg_stars"
        android:fontFamily="@font/verdana_bold"
        android:onClick="SelectedLevel"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mButtonLevel2"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>