<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    tools:context=".GameModeActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mImageButtonTitik"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_0"
        android:onClick="GameModeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_titik" />

    <ImageButton
        android:id="@+id/mImageButtonSalita"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_0"
        android:onClick="GameModeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_salita" />

    <TextView
        android:id="@+id/mTextViewPaloseboGameMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_stars"
        android:fontFamily="@font/verdana_bold"
        android:padding="@dimen/padding_3"
        android:text="Kategorya"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_xl"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mImageButtonTitik"
        app:layout_constraintEnd_toEndOf="@+id/mImageButtonSalita"
        app:layout_constraintStart_toStartOf="@+id/mImageButtonTitik"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>