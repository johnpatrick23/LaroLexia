<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_stars"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_1">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_hampas_palayok" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/verdana"
                android:text="Ang sunod na sinalihan ni Juan ay Hampas Palayok."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/verdana"
                android:text="Sa larong ito kailangan ni Juan paluin ang palayok upang lumabas ang mga letra kailangan nito."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/verdana"
                android:text="Tulungan natin si Juan na maituro ang mga tamang titik."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/mImageButtonStorylinePlay"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/button_width_m"
                android:layout_height="@dimen/button_height_m"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_playicon" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>